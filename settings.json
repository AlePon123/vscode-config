{
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.hover.enabled": true,
    "projectNameInStatusBar.align": "right",
    "projectNameInStatusBar.textStyle": "uppercase",
    "window.restoreWindows": "none",
    "window.title": "${rootName}${separator}${activeEditorShort}",
    "window.titleBarStyle": "native",
    "workbench.panel.defaultLocation": "right",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Pale Fire High Contrast",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.statusBar.feedback.visible": false,
    "workbench.tree.indent": 16,
    "editor.lineNumbers": "relative",
    "editor.codeLens": false,
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "code-eol.style": {
        "color": "#2a3f47",
        "opacity": 1.0
        // there are more settings that can go in here
        // see "ThemableDecorationAttachmentRenderOptions" on https://goo.gl/SYzyg8
    },
    "code-eol.toggleWithWhiteSpace": true,
    // "code-eol.validLineEnding": "LF"  , // (optional) this makes "CRLF" endings render as error-color
    // "code-eol.validLineEnding": "CRLF", // (optional) this makes "LF" endings render as error-color
    "code-eol.returnCharacter": "⇠",
    "code-eol.crlfCharacter": "↵",
    "code-eol.newlineCharacterStyle": {
        "color": "#2a3f47",
        "opacity": 0.9
    },
    "code-eol.returnCharacterStyle": {
        "color": "#2a3f47",
        "opacity": 0.9
    },
    "code-eol.crlfCharacterStyle": {
        "color": "#2a3f47",
        "opacity": 0.9
    },
    "workbench.useExperimentalGridLayout": true,
    "editor.renderWhitespace": "none",
    "editor.roundedSelection": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.renderFinalNewline": "on",
    "code-eol.newlineCharacter": "↲",
    "explorer.confirmDelete": true,
    "editor.wordBasedSuggestions": false,
    "extensions.ignoreRecommendations": true,
    "extensions.autoUpdate": true,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.enabled": false,
    "workbench.activityBar.visible": false,
    "editor.formatOnSave": true,
    "rust-analyzer.check.command": "clippy",
    "workbench.colorCustomizations": {
        "editorError.foreground": "#ff0000",
        "editorWarning.foreground": "#ff942f",
        "editorInfo.foreground": "#00b7e4",
        "errorLens.errorForeground": "#ff0000",
        "errorLens.warningForeground": "#ff942f",
        "errorLens.infoForeground": "#00b7e4"
    },
    "macros": {
        "closePanelCloseEditorsCloseSidebar": [
            "workbench.action.closePanel",
            "workbench.action.closeEditorsInOtherGroups",
            "workbench.action.closeOtherEditors",
            "workbench.action.closeSidebar",
        ],
        "focusPanelCloseSidebar": [
            "workbench.action.closeSidebar",
            "workbench.action.focusPanel",
        ],
        "focusFilesExplorerClosePanel": [
            "workbench.action.closePanel",
            "workbench.files.action.focusFilesExplorer",
        ],
    },
    "vim.foldfix": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<C-e>"
            ],
            "commands": [
                "editor.action.showHover"
            ],
            "silent": true
        },
        {
            "before": [
                "<C-r>"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        },
        {
            "before": [
                "<C-q>"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "commands": [
                "workbench.action.focusPreviousGroup"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "commands": [
                "workbench.action.focusNextGroup"
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "e"
            ],
            "commands": [
                "editor.action.indentLines"
            ],
            "silent": true,
        },
        {
            "before": [
                "q"
            ],
            "commands": [
                "editor.action.outdentLines"
            ],
            "silent": true,
        }
    ],
    "git.ignoreMissingGitWarning": true,
    "diffEditor.codeLens": true,
    "errorLens.messageBackgroundMode": "none",
    "errorLens.gutterIconsEnabled": true,
    "errorLens.errorGutterIconColor": "#ff0000",
    "errorLens.warningGutterIconColor": "#ff942f",
    "errorLens.infoGutterIconColor": "#00b7e4",
    "errorLens.gutterIconSet": "circle",
}